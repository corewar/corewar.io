{
    "name": "corewar",
    "version": "0.2.1",
    "description": "HTML5 & javascript implementation of the classic game [corewar](https://en.wikipedia.org/wiki/Core_War)",
    "main": "./dist/index.js",
    "type": "module",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "types": "./dist/index.d.ts",
    "scripts": {
        "test": "jest --verbose --config jest.config.mjs",
        "coverage": "jest --coverage",
        "build": "tsup src/index.ts --format esm,cjs --dts --clean --tsconfig tsconfig.json",
        "prepublish": "pnpm build",
        "prepublishOnly": "pnpm test",
        "lint": "echo 'Linting temporarily disabled for CI'",
        "clean": "rm -rf dist coverage",
        "dev": "echo 'Corewar package has no dev server - use build instead'"
    },
    "files": [
        "dist/**/*",
        "typings/**/*"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/corewar/corewar.git"
    },
    "author": "Gareth Williams",
    "contributors": [
        {
            "name": "Doug McDonald"
        }
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/corewar/corewar/issues"
    },
    "homepage": "https://github.com/corewar/corewar#readme",
    "dependencies": {
        "clone": "^2.1.2",
        "core-js": "^2.6.11",
        "diff": ">=3.5.0",
        "pubsub-js": "^1.8.0"
    },
    "devDependencies": {
        "@types/chai": "^4.3.20",
        "@types/clone": "^2.1.4",
        "@types/jest": "^30.0.0",
        "@types/node": "^20.19.11",
        "@types/sinon": "^9.0.11",
        "@types/sinon-chai": "^2.7.42",
        "chai": "^4.3.10",
        "eslint": "^8.57.1",
        "jest": "^29.7.0",
        "sinon": "^11.1.2",
        "sinon-chai": "^3.7.0",
        "ts-jest": "^29.4.1",
        "tsup": "^8.5.0",
        "typescript": "^5.9.2"
    }
}