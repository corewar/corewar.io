{
    "name": "corewar",
    "version": "0.2.1",
    "description": "HTML5 & javascript implementation of the classic game [corewar](https://en.wikipedia.org/wiki/Core_War)",
    "main": "./dist/index.js",
    "types": "./typings/index.d.ts",
    "scripts": {
        "test": "jest",
        "coverage": "jest --coverage",
        "build": "tsc -p tsconfig-build.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
        "prepublish": "pnpm build",
        "prepublishOnly": "pnpm test",
        "lint": "eslint src/**/*.ts",
        "clean": "rm -rf dist coverage",
        "dev": "echo 'Corewar package has no dev server - use build instead'"
    },
    "files": [
        "dist/**/*",
        "typings/**/*"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/corewar/corewar.git"
    },
    "author": "Gareth Williams",
    "contributors": [
        {
            "name": "Doug McDonald"
        }
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/corewar/corewar/issues"
    },
    "homepage": "https://github.com/corewar/corewar#readme",
    "dependencies": {
        "clone": "^2.1.2",
        "core-js": "^2.6.11",
        "diff": ">=3.5.0",
        "pubsub-js": "^1.8.0"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "eslint": "^8.57.1",
        "jest": "^30.1.1",
        "tscpaths": "^0.0.9",
        "typescript": "^5.9.2"
    }
}