{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "lib": ["ES2020", "DOM"],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@parser/*": ["./src/parser/*"],
      "@simulator/*": ["./src/simulator/*"],
      "@matches/*": ["./src/matches/*"]
    }
  },
  "include": ["./src/**/*"]
}
