{
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "route": "hills",
      "methods": [
        "post"
      ]
    },
    {
      "type": "cosmosDB",
      "direction": "in",
      "name": "record",
      "databaseName": "hills-db",
      "collectionName": "hills",
      "partitionKey": "/id",
      "sqlQuery": "select * from c where c.id = {id}",
      "connectionStringSetting": "DB_CONNECTION_STRING"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "type": "serviceBus",
      "direction": "out",
      "name": "bus",
      "topicName": "hill-updated",
      "connection": "AZURE_SERVICEBUS_CONNECTION_STRING"
    },
    {
      "type": "cosmosDB",
      "direction": "out",
      "name": "document",
      "databaseName": "hills-db",
      "collectionName": "hills",
      "createIfNotExists": true,
      "partitionKey": "/id",
      "connectionStringSetting": "DB_CONNECTION_STRING"
    },
    {
      "type": "signalR",
      "direction": "out",
      "name": "signalr",
      "hubName": "hills",
      "connectionString": "AzureSignalRConnectionString"
    }
  ],
  "scriptFile": "../dist/updateHillHttp/index.js"
}
